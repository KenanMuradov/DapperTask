<Window x:Class="DapperTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DapperTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height = "60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Name="btnDataBase" Content="Generate Database" FontSize="26" Click="btnDataBase_Click"></Button>
            <Button Name="btnGetData" IsEnabled="{Binding IsDatabaseExist}" Content="Get Data" FontSize="26" Click="btnGetData_Click"></Button>

        </StackPanel>

        <DataGrid Name="DataList" Grid.Row="1"></DataGrid>
    </Grid>
</Window>
